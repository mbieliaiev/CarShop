@page
@model CarShop.Web.Pages.IndexModel

@{
    ViewData["Title"] = "Index";
}

<style type="text/css">
    img {
        width: 300px;
        height:200px;
    }
</style>

<h1>Index</h1>

<p>
    <a asp-page="./CarModels/Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CarEntity[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CarEntity[0].Manufacturer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CarEntity[0].EnginePower)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CarEntity[0].EngineType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CarEntity[0].CylindersCount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CarEntity[0].Color)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CarEntity[0].DateProduced)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CarEntity[0].AvailableCount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CarEntity[0].Photo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.CarEntity) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Manufacturer)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EnginePower)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EngineType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CylindersCount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Color)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateProduced)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AvailableCount)
            </td>
            <td>
                    @if (item.Photo != null)
                    {
                        @Html.DisplayFor(modelItem => item.Photo)
                    }
                    else
                    {
                        <b>Not yet uploaded</b>
                    }
                
            </td>
            <td>
                <a asp-page="./CarModels/Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./CarModels/Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./CarModels/Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
